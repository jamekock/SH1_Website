@model IEnumerable<Website.Models.CrudModel>
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@foreach (var item in Model)
{
<form action="Edit" method="post">
    <input type="hidden" name="id" value="@item.Id"><br><br>
    <label>Nombre</label><br>
    <input type="text" name="nombre" value="@item.Nombre"><br><br>
    <label>Autor</label><br>
    <input type="text" name="autor" value="@item.Autor"><br><br>
    <label>Actores</label><br>
    <input type="text" name="actores" value="@item.Actores" size="70"><br><br>
    <label>Año</label><br>
    <input type="text" name="año" value="@item.Año"><br><br>
    <label>Sipnosis</label><br>
    <textarea name="sipnosis" cols="40" rows="3">@item.Sipnosis</textarea><br>
    <input type="submit" value="Actualizar">
</form>
}



